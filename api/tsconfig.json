{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express"
    ],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}