{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}